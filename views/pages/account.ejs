<!DOCTYPE html>
<html lang="en">
<head>
        <% include ../partials/head %>
        <title>Profile</title>
</head>
<body class="bg-light">
    <nav>
        <% include ../partials/nav %>
    </nav>
    <div class="container">
        <header>
            <h1>Hello <%= user.firstName %>!</h1>
        </header>
        <main>
            <div class="card">
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" placeholder="<%= user.email %>" readonly />
                        </div>
                        <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="<%= user.fullName %>" readonly />
                        </div>
                    </form>
                </div>
            </div>

        </main>    
    </div>
    <% include ../partials/scripts %>
</body>
</html>